<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <!-- ASP.NET Core Module Configuration -->
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      
      <!-- ASP.NET Core Application Configuration -->
      <aspNetCore processPath="dotnet" 
                  arguments=".\VCDevTool.API.dll" 
                  stdoutLogEnabled="true" 
                  stdoutLogFile=".\logs\stdout" 
                  hostingModel="inprocess">
        <environmentVariables>
          <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
          <environmentVariable name="ASPNETCORE_HTTPS_PORT" value="443" />
        </environmentVariables>
      </aspNetCore>
      
      <!-- Windows Authentication Configuration -->
      <security>
        <authentication>
          <!-- Enable Windows Authentication -->
          <windowsAuthentication enabled="true">
            <providers>
              <!-- Prefer Kerberos over NTLM for better security -->
              <add value="Negotiate" />
              <add value="NTLM" />
            </providers>
            <!-- Extended protection for enhanced security -->
            <extendedProtection tokenChecking="Allow" />
          </windowsAuthentication>
          
          <!-- Disable Anonymous Authentication for secure endpoints -->
          <anonymousAuthentication enabled="false" />
        </authentication>
        
        <!-- Authorization Configuration -->
        <authorization>
          <!-- Remove default allow all rule -->
          <remove users="*" roles="" verbs="" />
          
          <!-- Allow authenticated users -->
          <add accessType="Allow" users="*" />
          
          <!-- Deny specific paths if needed -->
          <!-- <add accessType="Deny" users="?" /> -->
        </authorization>
      </security>
      
      <!-- Security Headers -->
      <httpProtocol>
        <customHeaders>
          <!-- Security headers for enhanced protection -->
          <add name="X-Frame-Options" value="DENY" />
          <add name="X-Content-Type-Options" value="nosniff" />
          <add name="X-XSS-Protection" value="1; mode=block" />
          <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
          <add name="Content-Security-Policy" value="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'; connect-src 'self'" />
          
          <!-- Remove server information -->
          <remove name="Server" />
        </customHeaders>
      </httpProtocol>
      
      <!-- URL Rewrite Rules for HTTPS Redirection -->
      <rewrite>
        <rules>
          <!-- Redirect HTTP to HTTPS -->
          <rule name="Redirect to HTTPS" stopProcessing="true">
            <match url=".*" />
            <conditions>
              <add input="{HTTPS}" pattern="off" ignoreCase="true" />
              <add input="{HTTP_HOST}" pattern="localhost" negate="true" />
            </conditions>
            <action type="Redirect" url="https://{HTTP_HOST}/{R:0}" redirectType="Permanent" />
          </rule>
        </rules>
      </rewrite>
      
      <!-- Compression Configuration -->
      <urlCompression doStaticCompression="true" doDynamicCompression="true" />
      
      <!-- Static Content Configuration -->
      <staticContent>
        <!-- Set cache control for static files -->
        <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="30.00:00:00" />
      </staticContent>
      
      <!-- Error Pages -->
      <httpErrors errorMode="Custom" defaultResponseMode="ExecuteURL">
        <remove statusCode="401" subStatusCode="-1" />
        <remove statusCode="403" subStatusCode="-1" />
        <remove statusCode="404" subStatusCode="-1" />
        <remove statusCode="500" subStatusCode="-1" />
        
        <error statusCode="401" responseMode="ExecuteURL" path="/Error/Unauthorized" />
        <error statusCode="403" responseMode="ExecuteURL" path="/Error/Forbidden" />
        <error statusCode="404" responseMode="ExecuteURL" path="/Error/NotFound" />
        <error statusCode="500" responseMode="ExecuteURL" path="/Error/InternalServerError" />
      </httpErrors>
      
      <!-- Request Filtering -->
      <requestFiltering>
        <!-- Limit request size to 100MB -->
        <requestLimits maxAllowedContentLength="104857600" />
        
        <!-- Block potentially dangerous file extensions -->
        <fileExtensions>
          <add fileExtension=".exe" allowed="false" />
          <add fileExtension=".bat" allowed="false" />
          <add fileExtension=".cmd" allowed="false" />
          <add fileExtension=".com" allowed="false" />
          <add fileExtension=".pif" allowed="false" />
          <add fileExtension=".scr" allowed="false" />
          <add fileExtension=".vbs" allowed="false" />
        </fileExtensions>
        
        <!-- Block dangerous HTTP verbs -->
        <verbs>
          <add verb="TRACE" allowed="false" />
          <add verb="TRACK" allowed="false" />
        </verbs>
        
        <!-- Hide sensitive segments -->
        <hiddenSegments>
          <add segment="bin" />
          <add segment="App_code" />
          <add segment="App_GlobalResources" />
          <add segment="App_LocalResources" />
          <add segment="App_WebReferences" />
          <add segment="App_Data" />
          <add segment="App_Browsers" />
        </hiddenSegments>
      </requestFiltering>
      
      <!-- Default Document -->
      <defaultDocument>
        <files>
          <clear />
          <add value="index.html" />
        </files>
      </defaultDocument>
      
    </system.webServer>
  </location>
  
  <!-- System.Web Configuration (for compatibility) -->
  <system.web>
    <!-- Compilation settings -->
    <compilation targetFramework="4.8" />
    
    <!-- HTTP Runtime settings -->
    <httpRuntime targetFramework="4.8" maxRequestLength="102400" executionTimeout="300" />
    
    <!-- Session state (disabled for API) -->
    <sessionState mode="Off" />
    
    <!-- View state (disabled for API) -->
    <pages enableViewState="false" />
    
    <!-- Custom errors -->
    <customErrors mode="RemoteOnly" />
    
    <!-- Authentication (handled by ASP.NET Core) -->
    <authentication mode="None" />
    
    <!-- Authorization (handled by ASP.NET Core) -->
    <authorization>
      <allow users="*" />
    </authorization>
  </system.web>
  
  <!-- Connection Strings (if needed for legacy components) -->
  <connectionStrings>
    <!-- Connection strings should be in appsettings.json for ASP.NET Core -->
  </connectionStrings>
  
  <!-- App Settings (if needed for legacy components) -->
  <appSettings>
    <!-- App settings should be in appsettings.json for ASP.NET Core -->
  </appSettings>
  
</configuration> 